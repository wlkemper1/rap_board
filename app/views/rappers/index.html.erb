<div class="page-header">
  <h1>
    Rappers
    <a href="/rappers/new" class="btn btn-lg btn-success">New Rapper</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Picture</th>
        <th>Name</th>
        <th>City</th>
        <th>Actions</th>
      </tr>

      <% @rappers.each do |rapper| %>
      <tr>
        <td><img src="<%= rapper.picture %>" width="200"></td>
        <td><%= rapper.name %></td>
        <td><%= rapper.city %></td>
        <td>
          <a href="/rappers/<%= rapper.id %>" class="btn btn-primary">Show</a>
          <a href="/rappers/<%= rapper.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_rapper/<%= rapper.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
