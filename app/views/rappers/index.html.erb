<div class="page-header">
  <h1>
    Rappers
    <a href="/rappers/new" class="btn btn-lg btn-success">New Rapper</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Picture</th>
        <th>Name</th>
        <th>Hometown</th>
        <th>Discography</th>
      </tr>

      <% @rappers.each do |rapper| %>
      <tr>
        <td><a href="/rappers/<%= rapper.id %>">
          <img src="<%= rapper.picture %>" width="200"></td></a>
        <td><a href="/rappers/<%= rapper.id %>">
          <%= rapper.name %></a>
        </td>
        <td><%= rapper.city %></td>
        <td>
          <ul class="list-group">
          <% rapper.songs.each do |song| %>
            <li class="list-group-item">
              <a href="/songs/<%= song.id %>">
                <%= song.title %> (<%= song.year %>)
              </a>
            </li>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
