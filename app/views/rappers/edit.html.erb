<!-- Validation failure messages -->
<% if @rapper.errors.any? %>
  <% @rapper.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Rapper #<%= @rapper.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_rapper/<%= @rapper.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @rapper.name %>">
      </div>

      <!-- Label and input for picture -->
      <div class="form-group">
        <label for="picture" class="control-label">
          Picture
        </label>

        <input type="text" id="picture" name="picture" placeholder="Picture" class="form-control" value="<%= @rapper.picture %>">
      </div>

      <!-- Label and input for city -->
      <div class="form-group">
        <label for="city" class="control-label">
          City
        </label>

        <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @rapper.city %>">
      </div>

      <button class="btn btn-warning">
        Update Rapper
      </button>
      or
      <a href="/rappers/<%= @rapper.id %>">Cancel</a>
    </form>
  </div>
</div>
