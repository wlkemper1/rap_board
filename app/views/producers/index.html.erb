<div class="page-header">
  <h1>
    Producers
    <a href="/producers/new" class="btn btn-lg btn-success">New Producer</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Picture</th>
        <th>Name</th>
        <th>City</th>
        <th>Discography</th>
      </tr>

      <% @producers.each do |producer| %>
      <tr>
        <td><img src="<%= producer.picture %>" width="200"></td>
        <td><%= producer.name %></td>
        <td><%= producer.city %></td>
        <td>
          <ul class="list-group">
          <% producer.songs.each do |song| %>
            <li class="list-group-item">
              <a href="/songs/<%= song.id %>">
                <%= song.title %> (<%= song.year %>)
              </a>
            </li>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
